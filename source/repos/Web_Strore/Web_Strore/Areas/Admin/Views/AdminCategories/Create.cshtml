@model Web_Strore.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form asp-controller="AdminCategories" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Tên danh mục</label>
                            <input type="text" class="form-control" id="productPrice" asp-for="CatName">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Alias</label>
                            <input type="text" class="form-control" id="productPrice" asp-for="Alias">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="font-weight-semibold" for="productBrand">Ảnh đại diện</label>
                    <input name="fThumb" type="file" class="form-control" asp-for="Thumb">
                    <span asp-validation-for="Thumb" class="text-danger"></span>
                </div>
                <div class="form-group d-flex align-items-center">
                    <div class="switch m-r-10">
                        <input type="checkbox" asp-for="Published" checked="">
                        <label for="Publish"></label>
                    </div>
                    <label>Publish</label>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Title</label>
                        <input type="text" class="form-control" id="productPrice" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productColors">Metadesc</label>
                        <input type="text" class="form-control" id="productPrice" asp-for="MetaDesc">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productFit">MetaKey</label>
                        <input type="text" class="form-control" id="productPrice" asp-for="MetaKey">
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Mô tả chi tiết</label>
                        <input type="text" class="form-control" id="productName" asp-for="Description">
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</form>
<a asp-action="Index">Back to List</a>
@section Scripts{

    <!-- page js -->
    <script src="~/_Adminassets//vendors/select2/select2.min.js"></script>
    <script src="~/_Adminassets//vendors/quill/quill.min.js"></script>
    <script src="~/_Adminassets//js/pages/e-commerce-product-edit.js"></script>

}



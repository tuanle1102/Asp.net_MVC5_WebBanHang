@model IEnumerable<Web_Strore.Models.Account>

@{
    ViewData["Title"] = "Danh sách tài khoản quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách tài khoản quản trị </span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <div class="d-md-flex">
                        <div class="m-b-10 m-r-15">
                            <select id="idrole" class="custom-select" style="min-width: 180px;" asp-items="ViewBag.QuyenTruyCap">
                               
                                <option value="0" disabled selected>Chọn quyền truy cập</option>
                            </select>
                        </div>
                        <div class="m-b-10">
                            <select id="idstatus" class="custom-select" style="min-width: 180px;" asp-items="ViewBag.lsTrangThai">

                                <option value="" disabled selected>Chọn trạng thái</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-right">
                    <button class="btn btn-primary">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Add Product</span>
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>FullName</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Quyền truy cập</th>
                            <th>Trạng thái</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach(var item in Model) {
                        <tr>
                            <td>
                                @item.AccountId
                            </td>
                            <td>
                               @item.FullName
                            </td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Role.Description</td>
                            <td>
                                @if (item.Active)
                                {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                                }
                                else { 
                            <div class="d-flex align-items-center">
                                <div class="badge badge-success badge-dot m-r-10"></div>
                                <div>Block</div>
                            </div>
                                }
                            </td>
                            <td class="text-right">
                                <a class="btn btn-primary btn-tone m-r-5" asp-action="Edit" asp-route-id="@item.AccountId">Edit</a> |
                                <a class="btn btn-secondary btn-tone m-r-5" asp-action="Details" asp-route-id="@item.AccountId">Details</a> |
                                <a class="btn btn-danger btn-tone m-r-5" asp-action="Delete" asp-route-id="@item.AccountId">Delete</a>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
                <div aria-label="Page Negative Exemple">
                    <ul class="pagination">
                        <pager></pager>
                    </ul>

                </div>
            </div>
        </div>
    </div>
